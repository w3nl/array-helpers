{
    "extends": [
        "@hckrnews/eslint-config"
    ],
    "plugins": [
        "import"
    ],
    "rules": {
        "consistent-return": "warn",
        "eqeqeq": "warn",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "jquery": false,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    }
}
